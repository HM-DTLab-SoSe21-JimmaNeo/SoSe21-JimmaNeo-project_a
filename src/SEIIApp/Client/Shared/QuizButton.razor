@inject NavigationManager NavigationManager
@inject Services.QuizBackendAccessService QuizService

<div class="jumbotron border bg-@b" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); overflow: hidden; padding-top: 1rem; padding-bottom: 1rem" @onmouseout="mouseOut" @onmouseover="mouseIn" @onmousedown="clicked">
    Quiz:
    @if (Quiz != null)
    { <span style="float:right">@Quiz.Name</span><br />}
    <div class="progress border" style="background-color: #FFFFFF; margin-bottom:2px">
        <div class="progress-bar" role="progressbar" aria-valuenow="23" aria-valuemin="0" aria-valuemax="100" style="width:23%">22%</div>
    </div>
</div>

@code {
    [Parameter]
    public string QuizId { get; set; }

    public string b = "alive-green";

    private void mouseIn()
    {
        b = "success";

    }

    private void mouseOut()
    {
        b = "alive-green";
    }

    private void clicked()
    {
        NavigationManager.NavigateTo("/quiz/" + QuizId);
    }

    private QuizDto Quiz;

    protected override async Task OnParametersSetAsync()
    {
        Quiz = await QuizService.GetQuizById(Int32.Parse(QuizId));
    }
}
<style>
    .jumbotron {
        cursor: pointer;
    }
</style>