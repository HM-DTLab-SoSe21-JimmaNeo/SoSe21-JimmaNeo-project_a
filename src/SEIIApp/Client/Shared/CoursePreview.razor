@inject NavigationManager NavigationManager

<div class="jumbotron bg-@b text-@textColor" style="overflow: hidden; padding-top: 1rem; padding-bottom: 1rem" @onmouseout="mouseOut" @onmouseover="mouseIn" @onmousedown="clicked">
    <h2>
        @Name
        @if (Quiz)
        {
            <img src="icons/pencil-square.svg" style="float: right; padding-left: 8px;">
        }
        @if (Pdf)
        {
            <img src="icons/file-pdf.svg" style="float: right; padding-left: 8px;">
        }
        @if (Video)
        {
            <img src="icons/file-play.svg" style="float: right; padding-left: 8px;">
        }

    </h2>
    <p>
        <div style="overflow: hidden; float: left; ">
            <img src="@Img" class="rounded" width="266" height="200" style=" vertical-align: top; padding-right: 20px; object-fit: cover;  " />
        </div>
        <small>Description</small><br />
        <div class="text-wrap text-truncate" style="max-height: 11.7rem; height: 11.7rem;">
            @Desc
        </div>
    </p>
    <small>Progress</small>
    <div class="progress">
        <div class="progress-bar @striped @animated" role="progressbar" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100" style="width: @progress%">@progress%</div>
    </div>
</div>

@code {
    /* Parameter */
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Desc { get; set; }
    [Parameter]
    public string Img { get; set; }
    [Parameter]
    public bool Video { get; set; }
    [Parameter]
    public bool Pdf { get; set; }
    [Parameter]
    public bool Quiz { get; set; }
    [Parameter]
    public int progress { get; set; }



    /* reaktiv machen der jumbotrons */

    private string b = "secondary";
    private string textColor = "black";
    private string animated = "progress-bar";
    private string striped = "progress-bar";

    private void mouseIn()
    {
        b = "dark";
        textColor = "white";
        animated = "progress-bar-animated";
        striped = "progress-bar-striped";

    }

    private void mouseOut()
    {
        b = "secondary";
        textColor = "black";
        animated = "progress-bar";
        striped = "progress-bar";
    }

    private void clicked()
    {
        NavigationManager.NavigateTo("/Course");
    }
}

<style>

    .jumbotron {
        cursor: pointer;
    }
</style>