@inject NavigationManager NavigationManager

<div class="jumbotron bg-@b text-@textColor" style="overflow: hidden; padding-top: 1rem; padding-bottom: 1rem" @onmouseout="mouseOut" @onmouseover="mouseIn" @onmousedown="clicked">
    <h2>Unit @id</h2>
    <p>
        <div style="overflow: hidden; float: left; ">
            <img src="https://asia.olympus-imaging.com/content/000107507.jpg" class="rounded" style=" vertical-align: top; padding-right: 20px;" />
        </div>
        <small>Description</small><br />
        <div class="text-wrap text-truncate" style="max-height: 11.7rem; height: 11.7rem;">
            Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
            Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.
        </div>
    </p>
    <img src="https://pic.onlinewebfonts.com/svg/img_72079.png" width="60px" style="float:left; vertical-align: top; padding-right:18px;" />
    <img src="https://msfn.org/wp-content/uploads/2015/03/pdf.png" width="60px" style="float:left; vertical-align: top; padding-right:18px;" />
    <img src="https://cdn3.iconfinder.com/data/icons/quiz/96/quiz_07-512.png" width="60px" style="float:none; vertical-align: top; padding-right:0px;" />
    <ContentTypePreview video="true" pdf="true" quiz="true" />
    <br /><small>Progress</small>
    <div class="progress">
        <div class="progress-bar @striped @animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">75%</div>
    </div>
</div>

@code { 
            /* Parameter */
            [Parameter]
            public string id { get; set; }

            /* reaktiv machen der jumbotrons */

            private string b = "secondary";
            private string textColor = "black";
            private string animated = "progress-bar";
            private string striped = "progress-bar";

            private void mouseIn()
            {
                b = "dark";
                textColor = "white";
                animated = "progress-bar-animated";
                striped = "progress-bar-striped";

            }

            private void mouseOut()
            {
                b = "secondary";
                textColor = "black";
                animated = "progress-bar";
                striped = "progress-bar";
            }

            private void clicked()
            {
                NavigationManager.NavigateTo("/Course");
            } 
}

<style>

    .jumbotron {
        cursor: pointer;
    }
</style>