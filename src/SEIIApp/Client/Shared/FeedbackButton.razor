<a href="/feedback/@CourseId" style="text-decoration:none">
    <div class="jumbotron border bg-@b" style="color:#FFFFFF; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); overflow: hidden; padding-top: 1rem; padding-bottom: 1rem; margin-bottom:0" @onmouseout="mouseOut" @onmouseover="mouseIn" >
        <center>Feedback</center>
    </div>
</a>
@code {

    [Parameter]
    public int CourseId { get; set; }

    public string b = "cyan";

    private void mouseIn()
    {
        b = "cyan-focus";

    }

    private void mouseOut()
    {
        b = "cyan";
    }

}

<style>
    .jumbotron {
        cursor: pointer;
    }
</style>
