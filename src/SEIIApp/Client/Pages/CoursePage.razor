@page "/course/{Id:int}"

@inject Services.CourseBackendAccessService CourseService

<h1>
    Unit @Id
</h1>
<div class="row">
    <div class="col-sm-10">

        @if(Course.VideoURL != null &&  Course.VideoURL != "") {
        <div class="videoResponsive">
            <iframe width="560" height="315" src="@Course.VideoURL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        }
    </div>
    <span class="text">

    </span>
    <a class="btn-primary" href="/feedback">FEEDBACK</a>
    <div class="col-sm-2">
        <h2>@Course.Name</h2>
        <br />
        <span class="text">
            @Course.Desc
        </span>

    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    [Parameter]
    public CourseDto Course { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Course = await CourseService.GetCourseById(Id);
    }
}