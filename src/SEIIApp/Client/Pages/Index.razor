@for (var i = 0; i < courses.Length; i+=3)
{
<div class="row">
    @for (var j = i; j < i + 3 && j < courses.Length; j++)
    {
        <div class="col-sm-4">
            <CoursePreview Name="@courses[j].Name" Desc="@courses[j].Desc" Img="@courses[j].Img" Video="@courses[j].Video" Pdf="@courses[j].Pdf" Quiz="@courses[j].Quiz" progress="@courses[j].Progress" />
        </div>
    }
</div>
}



